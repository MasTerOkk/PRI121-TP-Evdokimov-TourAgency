<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TourAgency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/agency.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Nunito&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <div class="col">
                    <a class="navbar-brand"  asp-area="" asp-controller="Tours" asp-action="Index">TourAgency</a>
                </div>
                <div class="col d-flex justify-content-end">
                    @if(User.IsInRole("Admin"))
                    {
                    <a class="admin" asp-area="" asp-controller="Users" asp-action="Index">
                        <div class="btn-back">
                            <i class="fa-solid fa-hammer fa-xl"></i>
                        </div>
                    </a>    
                    }
                    @if (User.IsInRole("TourOperator") || User.IsInRole("Admin"))
                    {
                        <a class="admin" asp-area="" asp-controller="Order" asp-action="Index">
                            <div class="btn-back">
                                <i class="fa-solid fa-hammer fa-xl"></i>
                            </div>
                        </a>
                    }
                    
                    
                    <a class="cart"  asp-area="" asp-controller="ShopCart" asp-action="Index">
                        <div class="btn-back">
                            <i class="fa-solid fa-cart-shopping fa-xl"></i>
                        </div>
                    </a>
                    @*<a class="acc" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <div class="btn-back">
                            <i class="fa-solid fa-user fa-xl"></i>
                        </div>
                    </a>*@
                    <a class="acc" asp-action="Profile" asp-controller="Profile" title="Manage">
                        <div class="btn-back">
                            <i class="fa-solid fa-user fa-xl"></i>
                        </div>
                    </a>
                    @if (SignInManager.IsSignedIn(User))
                    {
                       <a class="login" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <div class="btn-back">
                            <i class="fa-solid fa-right-to-bracket fa-xl"></i>
                        </div>
                        </a> 
                    }
                    
                </div>
                    @*<partial name="_LoginPartial" />*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-fluid privacy">
            &copy; 2023 - TourAgency
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/0e4a1ed86f.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
